pipeline {
    agent {
        docker { image 'node:14-alpine' }
    }
    
    stages {
        stage('Clone git') {
            steps {
                git 'https://github.com/cmelgreen/PersonalSite'
            }
        }

        stage('Install') { 
            steps {
                sh 'yarn install'
            }
        }


        stage('Build') { 
            steps {
                sh 'yarn build'
            }
        }
    }
}
